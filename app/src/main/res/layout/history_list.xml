<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="5dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:id="@+id/rlhistoryList_main"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Booking Time :"
                    android:textSize="14sp"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/colorSecondaryText"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvBooking_historyList"
                    android:text=""
                    android:textSize="16sp"
                    android:gravity="end|center_vertical"
                    android:textColor="@color/colorPrimaryText"
                    android:textStyle="italic"
                    android:layout_weight="3"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Arrival Time :"
                    android:textSize="14sp"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/colorSecondaryText"
                    android:layout_weight="1"
                    android:id="@+id/tvArrival_historyList_Text"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvArrival_historyList"
                    android:text=""
                    android:textSize="16sp"
                    android:gravity="end|center_vertical"
                    android:textColor="@color/colorPrimaryText"
                    android:textStyle="italic"
                    android:layout_weight="3"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Checkout Time :"
                    android:textSize="14sp"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/colorSecondaryText"
                    android:layout_weight="1"
                    android:id="@+id/tvCheckout_historyList_Text"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCheckout_historyList"
                    android:text=""
                    android:textSize="16sp"
                    android:gravity="end|center_vertical"
                    android:textColor="@color/colorPrimaryText"
                    android:textStyle="italic"
                    android:layout_weight="3"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Amount :"
                    android:textSize="14sp"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/colorSecondaryText"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAmount_historyList"
                    android:text=""
                    android:textSize="16sp"
                    android:gravity="end|center_vertical"
                    android:textColor="@color/colorPrimaryText"
                    android:textStyle="italic"
                    android:layout_weight="3"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Transaction Id :"
                    android:textSize="14sp"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/colorSecondaryText"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvTransaction_historyList"
                    android:text=""
                    android:textSize="16sp"
                    android:gravity="end|center_vertical"
                    android:textColor="@color/colorPrimaryText"
                    android:textStyle="italic"
                    android:layout_weight="3"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="- - CANCELLED - -"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="italic"
                android:gravity="center"
                android:id="@+id/tvCancelled"
                android:layout_marginTop="5dp"
                android:visibility="gone"/>



        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>